<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:text="1"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:background="#f20"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:background="#7FE409"
        android:layout_above="@id/textView1"
        android:layout_toStartOf="@id/textView1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:background="#C70EE6"
        android:layout_above="@id/textView1"
        android:layout_toEndOf="@id/textView1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:background="#C8D551"
        android:layout_below="@id/textView1"
        android:layout_toStartOf="@id/textView1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:background="#6E4F73"
        android:layout_below="@id/textView1"
        android:layout_toEndOf="@id/textView1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="30sp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:background="#EA8D70"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="30sp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:background="#25B4F4"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="30sp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:background="#D8ED07"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="30sp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:background="#ED3D06"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />




</RelativeLayout>